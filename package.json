{
  "name": "@theatersoft/zwave",
  "version": "1.1.5",
  "description": "Bus service module for Z-Wave devices",
  "repository": "theatersoft/zwave",
  "main": "zwave.js",
  "engines": {
    "node": ">=7.6.0"
  },
  "scripts": {
    "build": "time -p node build.js && ls -l dist",
    "build:dist": "DIST=true npm run build",
    "link": "(cd dist; npm link); npm link @theatersoft/zwave @theatersoft/device; cd dist; npm link @theatersoft/bus openzwave-shared",
    "publish": "node build.js publish"
  },
  "distScripts": {
    "BUS": "env $(cat ~/.config/theatersoft/.bus | xargs)",
    "DEVBUS": "env $(cat .bus | xargs)",
    "DEVRUN": "npm run DEVBUS -- node",
    "RUN": "npm run BUS -- node",
    "start": "npm run RUN -- start.js",
    "start:dev": "npm run DEVRUN -- start.js",
    "debug": "npm run BUS -- node --inspect-brk start.js",
    "debug:dev": "npm run DEVBUS -- node --inspect-brk start.js"
  },
  "author": "Rob Huehn <rob@theatersoft.com>",
  "license": "AGPL-3.0",
  "distDependencies": {
    "@theatersoft/bus": "~1",
    "openzwave-shared": "^1.2.5",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "remote-redux-devtools": "^0.5.7"
  },
  "devDependencies": {
    "@theatersoft/device": "~1",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-babili": "0.0.3",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-ignore": "^1.0.3",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-strip": "^1.1.1",
    "shelljs": "^0.7.4"
  }
}
